{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Buying Guide Content Schema",
  "type": "object",
  "required": ["title", "category", "year", "recommendations", "lastUpdated"],
  "properties": {
    "title": {
      "type": "string",
      "description": "Buying guide title (Best X for Y 2025)"
    },
    "slug": {
      "type": "string",
      "pattern": "^best-[a-z0-9-]+-2025$"
    },
    "category": {
      "type": "string",
      "description": "Product category being reviewed"
    },
    "year": {
      "type": "number",
      "minimum": 2024
    },
    "introduction": {
      "type": "string",
      "description": "Brief overview of the category and what to expect"
    },
    "buyingCriteria": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["factor", "importance", "explanation"],
        "properties": {
          "factor": "string",
          "importance": {
            "type": "string",
            "enum": ["high", "medium", "low"]
          },
          "explanation": "string",
          "tips": {
            "type": "array",
            "items": "string"
          }
        }
      }
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["rank", "product", "category", "score", "verdict"],
        "properties": {
          "rank": {
            "type": "number",
            "minimum": 1
          },
          "product": {
            "type": "object",
            "required": ["name", "brand", "price"],
            "properties": {
              "name": "string",
              "brand": "string",
              "model": "string",
              "price": {
                "type": "object",
                "properties": {
                  "amount": "number",
                  "currency": "string",
                  "retailer": "string",
                  "url": "string"
                }
              },
              "images": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "url": "string",
                    "alt": "string"
                  }
                }
              },
              "keySpecs": "object"
            }
          },
          "category": {
            "type": "string",
            "description": "Best for category (overall, budget, premium, etc.)"
          },
          "score": {
            "type": "object",
            "properties": {
              "overall": {
                "type": "number",
                "minimum": 1,
                "maximum": 5
              },
              "breakdown": "object"
            }
          },
          "verdict": {
            "type": "object",
            "required": ["summary", "bestFor"],
            "properties": {
              "summary": "string",
              "bestFor": {
                "type": "array",
                "items": "string"
              },
              "pros": {
                "type": "array",
                "items": "string"
              },
              "cons": {
                "type": "array",
                "items": "string"
              }
            }
          },
          "testingNotes": {
            "type": "string",
            "description": "How this product was evaluated"
          },
          "alternatives": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": "string",
                "reason": "string"
              }
            }
          }
        }
      }
    },
    "howWeTested": {
      "type": "string",
      "description": "Testing methodology for all products"
    },
    "frequentlyAskedQuestions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["question", "answer"],
        "properties": {
          "question": "string",
          "answer": "string"
        }
      }
    },
    "budgetBreakdown": {
      "type": "object",
      "properties": {
        "budget": {
          "type": "object",
          "properties": {
            "range": "string",
            "recommendations": {
              "type": "array",
              "items": "string"
            }
          }
        },
        "midRange": {
          "type": "object",
          "properties": {
            "range": "string",
            "recommendations": {
              "type": "array",
              "items": "string"
            }
          }
        },
        "premium": {
          "type": "object",
          "properties": {
            "range": "string",
            "recommendations": {
              "type": "array",
              "items": "string"
            }
          }
        }
      }
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["title", "url"],
        "properties": {
          "title": "string",
          "url": "string",
          "accessDate": "string"
        }
      }
    },
    "seo": {
      "type": "object",
      "properties": {
        "metaTitle": "string",
        "metaDescription": "string",
        "keywords": {
          "type": "array",
          "items": "string"
        }
      }
    },
    "lastUpdated": {
      "type": "string",
      "format": "date"
    },
    "nextUpdate": {
      "type": "string",
      "format": "date",
      "description": "Scheduled review date"
    }
  }
}
