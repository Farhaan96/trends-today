{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "News Article Content Schema",
  "type": "object",
  "required": ["title", "summary", "publishedAt", "sources", "lastUpdated"],
  "properties": {
    "title": {
      "type": "string",
      "description": "News headline"
    },
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "summary": {
      "type": "string",
      "description": "Brief summary of the news story",
      "maxLength": 160
    },
    "content": {
      "type": "string",
      "description": "Full news article content"
    },
    "category": {
      "type": "string",
      "enum": [
        "smartphones",
        "laptops",
        "gaming",
        "ai",
        "enterprise",
        "security",
        "startups",
        "acquisitions",
        "product-launches",
        "industry-analysis"
      ]
    },
    "tags": {
      "type": "array",
      "items": "string"
    },
    "publishedAt": {
      "type": "string",
      "format": "date-time"
    },
    "lastUpdated": {
      "type": "string",
      "format": "date-time"
    },
    "author": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": "string",
        "bio": "string",
        "twitter": "string"
      }
    },
    "sources": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["title", "url", "publisher"],
        "properties": {
          "title": "string",
          "url": "string",
          "publisher": "string",
          "publishedAt": "string",
          "accessDate": "string"
        }
      }
    },
    "relatedProducts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": "string",
          "category": "string",
          "relevance": "string"
        }
      }
    },
    "impact": {
      "type": "object",
      "properties": {
        "industry": "string",
        "consumers": "string",
        "competitors": "string"
      }
    },
    "quotes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["text", "source"],
        "properties": {
          "text": "string",
          "source": "string",
          "title": "string",
          "company": "string"
        }
      }
    },
    "timeline": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["date", "event"],
        "properties": {
          "date": "string",
          "event": "string"
        }
      }
    },
    "seo": {
      "type": "object",
      "properties": {
        "metaTitle": "string",
        "metaDescription": "string",
        "keywords": {
          "type": "array",
          "items": "string"
        },
        "newsKeywords": {
          "type": "array",
          "items": "string"
        }
      }
    },
    "socialMedia": {
      "type": "object",
      "properties": {
        "twitterCard": "string",
        "ogImage": "string",
        "ogDescription": "string"
      }
    },
    "urgency": {
      "type": "string",
      "enum": ["breaking", "important", "standard"],
      "default": "standard"
    },
    "correction": {
      "type": "object",
      "properties": {
        "date": "string",
        "reason": "string",
        "changes": "string"
      }
    }
  }
}
